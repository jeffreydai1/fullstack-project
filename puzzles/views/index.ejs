//Adapted from https://www.tutorialswebsite.com/render-mongodb-data-records-in-html-using-ejs-view-engine-and-express-js/
<table class="table table-striped table-primary">
        <thead>
          <tr>
            <th>Username</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <%if (records.length >0){ %>
          <% records.forEach(function(row){ %>
          <tr>
            <td><%= row.username %></td>
            <td><%= row.score %></td>
          </tr>
          <% })}else{ %>
            <tr>
                <td colspan="6">No Record Found</td>

              </tr>
            <% } %>
        </tbody>
      </table>
